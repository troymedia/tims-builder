<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				   xmlns:s="library://ns.adobe.com/flex/spark" 
				   xmlns:mx="library://ns.adobe.com/flex/mx" 
				   minWidth="320" minHeight="240"
				   xmlns:idxd="com.idxd.components.common.*"
				   verticalCenter.isoView="0" horizontalCenter.isoView="0"
				   >
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			
			[Bindable] protected var recNumber:String;
			[Bindable] protected var courseTitle:String;
			[Bindable] protected var version:String;
			[Bindable] protected var language:String;
			[Bindable] protected var numSegment:String;
			[Bindable] protected var status:String;
			[Bindable] protected var dateBuilt:String;
			[Bindable] protected var dateLastModified:String;
			[Bindable] protected var airports:ArrayCollection;
			[Bindable] protected var languages:ArrayCollection;
			
			
			protected function view():void{}
			
			protected function buildTest():void{}
			
			protected function save():void{}
			
			protected function reset():void{}
			
			protected function updateAssessmentId():void{}
			
			public static function clone(assessment:IETAssessment):IETAssessment
			{
				var clonedAssessment:IETAssessment = new IETAssessment();
				clonedAssessment.setStyle('backgroundColor', Math.random() * assessment.getStyle('backgroundColor'));
				clonedAssessment.alpha = assessment.alpha;
				clonedAssessment.height = assessment.height;
				clonedAssessment.width = assessment.width;
				return clonedAssessment;
			}
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="tile"/>
		<s:State name="list"/>
		<s:State name="isoView"/>
	</s:states>
	
	<s:HGroup width="100%" height="100%" paddingBottom="0" paddingLeft="0" paddingRight="0" paddingTop="0" gap="0"
			  includeIn="isoView ">
		<s:BorderContainer height="100%" width="240" backgroundColor="gray"/>
		<s:SkinnableContainer height="100%" width="100%" backgroundColor="0xdedede">
			<s:layout>
				<s:VerticalLayout/>
			</s:layout>
			<idxd:IDXDActionBar height="32" width="100%" headerText="Assessments" color="white" backgroundColor="0x000080"/>
		</s:SkinnableContainer>
	</s:HGroup>
</s:BorderContainer>
