<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				   xmlns:s="library://ns.adobe.com/flex/spark" 
				   xmlns:mx="library://ns.adobe.com/flex/mx"
				   backgroundColor="0x333333"
				   creationComplete="init()" xmlns:views="com.ecistm.tlpa.views.*"
				   cornerRadius="10" xmlns:components="com.ecistm.tlpa.components.*">
	<fx:Declarations>
		
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import com.ecistm.tlpa.models.LessonModel;
			
			import flash.media.*;
			import flash.net.URLRequest;
			
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.controls.RadioButton;
			import mx.rpc.events.FaultEvent;
			import mx.rpc.events.ResultEvent;
			
			import spark.components.NavigatorContent;
			
			[Bindable] protected var lessons:ArrayCollection;
			
			[Bindable] protected var questions:ArrayCollection;
			
			
			protected function init():void
			{
				
			}
			
			public function buildQuiz(data:*):void
			{
				for each(var qp:Object in data.questionPool)
				{
					for each(var q:Object in qp.question)
					{
						var navContent:NavigatorContent = new NavigatorContent();
						navContent.percentHeight = navContent.percentWidth = 100;
						var question:Question = new Question();
						question.type = q.type;
						question.questionText = q.text;
						question.audio = q.audio;
						question.cardinality = q.cardinality;
						for each(var r:Object in q.response)
						{
//							Alert.show('r');
							var rb:RadioButton = new RadioButton();
//							rb.groupName = 'questionPool';
							rb.label = r.text;
							rb.setStyle('color', 'white');
							question.addElement(rb);
							//question.responsesGroup.addElement(rb);
							//Alert.show('r');
						}
						
						navContent.addElement(question);
						//question.responsesGroup.addElement(rb);
						stack.addElement(navContent);
//						Alert.show('yes');
					}
				}
			}
			
			public function stepToNextQuestion():void
			{
				stack.selectedIndex += 1;;
//				Alert.show(String(stack.selectedIndex + 1));
			}
		
			public function resetQuiz():void
			{
				//restart quiz logic
			}
			
		]]>
	</fx:Script>
	
	<s:layout>
		<s:VerticalLayout paddingTop="10" paddingLeft="10" paddingRight="10" paddingBottom="10"/>
	</s:layout>
	
	<components:TLPAQuizTitle/>
	
	<s:BorderContainer height="100%" width="100%" backgroundImage="@Embed('assets/images/taxi_dark2.jpg')" borderVisible="true"
					   cornerRadius="10">
		<s:layout>
			<s:VerticalLayout paddingTop="10" paddingLeft="10" paddingRight="10" paddingBottom="10"/>
		</s:layout>
		
		<mx:ViewStack id="stack" width="100%" height="100%">
			
		</mx:ViewStack>
		
	</s:BorderContainer>
	
	<s:HGroup width="100%" horizontalAlign="right">
		<components:SubmitButton/>
	</s:HGroup>
	
</s:BorderContainer>
