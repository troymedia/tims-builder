<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  xmlns:components="com.ecistm.tlpa.components.*"
		  cornerRadius="10"
		  backgroundColor="0x1e1e1e"
		  creationComplete="init()">
	<fx:Declarations>
		<components:SoundPlayer id="soundPlayer" url="{audio}"/>
		<fx:String id="feedbackText"/>
		<fx:String id="titleText"/>
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import mx.controls.Alert;
			
			[Bindable] protected var dialogText:Array = [];
			
			[Bindable] public var audio:String = 'assets/audio/spanish_joint.mp3';
			[Bindable] public var videoSource:String;
			[Bindable] public var imageSource:String = 'assets/images/tlpa09_pool03_feedback01.png';
			
			protected function init():void
			{
				soundPlayer.play();
			}
			
			public function close():void
			{
				this.visible = false;
			}
			
		]]>
	</fx:Script>
	
	<s:layout>
		<s:VerticalLayout paddingLeft="5" paddingBottom="5" paddingRight="5" paddingTop="5" gap="5" horizontalAlign="center" verticalAlign="middle"/>
	</s:layout>
	
	<s:states>
		<s:State name="incorrectImageView"/>
		<s:State name="correctView"/>
		<s:State name="incorrectTextView"/>
	</s:states>
	
	<s:BitmapImage width="100%" height="100%"
				   source="{imageSource}"
				   excludeFrom="correctView, incorrectTextView"/>
	<!--<s:VGroup paddingLeft="5" paddingRight="5" paddingTop="5" paddingBottom="5" 
			  includeIn="correctView, incorrectTextView">
		<s:Label color="white" fontWeight="bold" text="{titleText}"/>
		<s:Line width="100%"/>
		<s:TextArea left="0" top="10" right="0"
					contentBackgroundAlpha="0" borderVisible="false" height="100" width="300" text="{feedbackText}"/>
	</s:VGroup>-->
	
	<s:HGroup width="100%" horizontalAlign="center" 
			  paddingBottom="5" paddingTop="5">
		<s:Button id="okButton" 
				  label.correctView="Continue"
				  label="Next Question"/>
		<s:Button id="cancelButton" 
				  label.correctView="Retry Quiz"
				  includeIn="correctView"/>
	</s:HGroup>
	
</s:BorderContainer>
